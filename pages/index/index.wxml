<view class="container">
  <view class="top"></view>
  <view class="avatar">
    <image wx:if="{{avatarUrl}}" src="{{avatarUrl}}"></image>
    <text>{{nickName}}</text>
  </view>
  <view class="viewOrNotView">
    <view class="left">
      <text class="count" bindtap='switchToView'>0</text>
      <text class="key">已看过</text>
    </view>
    <view class="right">
      <text class="count" bindtap='switchToNotView'>0</text>
      <text class="key">未看过</text>
    </view>
  </view>
  <view class="searchAndAdd">
    <view class="search" bindtap='switchToSearch'>
      <image src="../../images/search.png"></image>
    </view>
    <view class="add" bindtap='chooseLocation'>
      <image src="../../images/add.png"></image>
    </view>
  </view>
</view>