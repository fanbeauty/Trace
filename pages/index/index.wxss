.top{
  width: 100%;
  height: 60px;
  background-color:#f8c3cd;
  border-bottom-right-radius: 50% 30px;
  border-bottom-left-radius: 50% 30px;
}

.avatar{
  display: flex;
  flex-direction: column;
  text-align: center;
}

.avatar>image{
  width: 80px;
  height: 80px;
  margin: -40px auto 10px;
  border-radius: 40px;
}

.avatar>text{
  font-size: 14px;
}

.viewOrNotView{
  display: flex;
  flex-direction: row;
  margin-top:120px;
}
.viewOrNotView > .left,.right{
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.count{
  font-size: 42px;
  color: #f8c3cd;
}

.key{
  font-size: 18px;
}

.viewOrNotView > .left{
  border-right: 1px solid grey;
}

.viewOrNotView > .right{
  border-left: 1px solid grey;
}

.searchAndAdd{
  display: flex;
  flex-direction: row;
  margin-top: 120px;
  height: 40px;
  text-align: center;
  line-height: 40px;
}

.searchAndAdd >.search,.add{
  flex:1;
  margin: 0px 25px;
  border-radius: 5px;
  background-color: #f8c3cd; 
}

.searchAndAdd >.search image{
  width:24px;
  height: 24px;
  margin-top: 8px;
}

.searchAndAdd >.add image{
  width:24px;
  height: 24px;
  margin-top: 8px;
}