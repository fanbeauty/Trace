page {
  background-color: rgb(245, 246, 248);
}

.container {
  width: 90%;
  margin: 0px auto;
}

.container .search {
  height: 40px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  border-radius: 5px;
  background-color: white;
  margin-top: 20px;
  font-size: 18px;
}

.container .search input[type=text] {
  line-height: 40px;
  height: 100%;
}

.container .content {
  width: 100%;
  margin-top: 10px;
  background: rgb(245, 246, 248);
}

.container .content .item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 120px;
  margin-bottom: 10px;
  background: white;
}

.container .content .item .left {
  flex: 0 0 100px;
  text-align: center;
}

.container .content .item .left .placeImage {
  width: 80px;
  height: 80px;
  margin: 5px auto;
}

.container .content .item .left .placeImage image {
  width: 80px;
  height: 80px;
  border-radius: 5px;
}

.container .content .item .left .visitedOrNot {
  display: inline-block;
  height: 20px;
  padding: 0px 10px;
  border-radius: 5px;
  border: 1px solid #f8c3cd;
  font-size: 12px;
  line-height: 20px;
  text-align: center;
  color: #f8c3cd;
}

.container .content .item .right {
  flex: 1;
 
}
.container .content .item .right .location{
  display: flex;
  flex-direction: row;
  border-bottom: 1px dotted rgba(0,0,0,0.7);
}
.container .content .item .right .address {
  width: 200px;
  height: 70px;
  line-height: 70px;
  font-size: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .content .item .right .location image{
  display: inline-block;
  width: 24px;
  height: 24px;
  margin-top: 23px;
  opacity: 0.5;
}
.container .content .item .right .tagAndDistance{
  display: flex;
  flex-direction: row;
}
.container .content .item .right .tags{
  width:160px;
  height: 50px;
  font-size: 15px;
  line-height: 50px;
  color: rgba(0,0,0,0.5);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .content .item .right .tags .tag{
  margin-right: 3px;
}
.container .content .item .right .distance{
  color: rgba(0,0,0,0.7);
  font-size: 16px;
  line-height: 50px;
}