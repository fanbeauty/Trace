page {
  font-size: 18px;
  font-family: 'Open Sans', sans-serif;
  color: #4a4a4a;
  text-align: center;
}

.container {
  margin: 20px auto;
  min-height: 500px;
  width: 300px;
  padding: 10px;
  position: relative;
  background: -webkit-gradient(linear, 0% 20%, 0% 100%, from(#fff), to(#fff), color-stop(0.2, #f2f2f2));
  border: 1px solid #ccc;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
}

.container:before {
  content: '';
  width: 50px;
  height: 50px;
  top: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  box-shadow: 10px -10px 8px rgba(0, 0, 0, 0.2);
  transform: rotate(2deg) translate(-14px, 20px) skew(-20deg);
}

.container:after {
  content: '';
  width: 50px;
  height: 50px;
  top: 0;
  left: 0;
  position: absolute;
  z-index: -1;
  display: inline-block;
  box-shadow: -10px -10px 10px rgba(0, 0, 0, 0.2);
  transform: rotate(2deg) translate(12px, 25px) skew(20deg);
}

.bottomLeft {
  width: 100px;
  height: 100px;
  bottom: 0;
  right: 0;
  position: absolute;
  z-index: -1;
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
  transform: rotate(0deg) translate(-20px, -15px) skew(20deg);
}

.bottomRight {
  content: '';
  width: 100px;
  height: 100px;
  bottom: 0;
  left: 0;
  position: absolute;
  z-index: -1;
  box-shadow: -10px 10px 10px rgba(0, 0, 0, 0.2);
  transform: rotate(0deg) translate(20px, -15px) skew(-20deg);
}

.listTags {
  display: flex;
  flex-direction: column;
  height: 320px;
  overflow: auto;
}

.listTags .tag {
  height: 40px;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
  line-height: 40px;
}

.newTags {
  position: absolute;
  left: 20px;
  bottom: 30px;
  width: 280px;
  background-color: white;
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
}

.newTags button {
  border: none;
}
