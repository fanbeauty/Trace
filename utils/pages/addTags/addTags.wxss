.tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20px;
}

.tags .tag {
  margin-right: 30px;
  margin-top: 10px;
  padding: 5px 30px;
  border-radius: 5px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
}

.manageTags {
  position: relative;
  top: 10px;
  left: 250px;
  height: 50px;
  width: 100px;
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 5px;
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
  line-height: 50px;
  text-align: center;
}

.manageTags text {
  font-family: 'Open Sans', sans-serif;
  color: #4a4a4a;
  font-size: 15px;
  text-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
}

.save {
  position: fixed;
  left: 10%;
  bottom: 20px;
  width: 80%;
  border: 1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.2);
}

.save button{
  border: none;
}
