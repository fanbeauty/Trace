.tab{
    display: flex;
    flex-flow: row wrap;
    justify-content: left;
    margin-top: 10px;
}

.tab > .item{
    width: 60px;
    height: 60px;
    margin:15px;
}

.item > text{
    display: block;
    text-align: center;
    width: 60px;
    font-size: 12px;
}

.item > image{
    width: 100%;
    height: 100%;
    border-radius: 50px;
}