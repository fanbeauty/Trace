.search{
    position: relative;
    height: 40px;
    width: 340px;
    margin:10px auto 0px auto;
    border-radius: 10px;
    line-height: 40px;
    background-color: rgba(240, 233, 233, 0.404);
}

.search > input {
    height: 40px;
    padding-left: 50px;
    font-size: 15px;
}

.search > image {
    position: absolute;
    top: 12px;
    left: 25px;
    width: 20px;
    height: 20px;
}

