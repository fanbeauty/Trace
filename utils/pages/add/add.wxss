page{
  background-color: rgb(245, 246, 248);
}

.pic-wapper{
  width: 100%;
  position: relative;
}

.picAndname{
  display: flex;
  flex-direction:column;
  text-align: center;
}

.picAndname image{
  width: 100px;
  height: 100px;
  border-radius: 50px;
  margin: 40px auto 10px;
}

.picAndname .name{
  width: 320px;
  margin: 0px auto 10px;
  font-weight: bold;
}


.bg{
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 205px;
  background: url(https://www.huany.top/LuJi/luji.jpg);
  background-size: 100%;
  background-repeat: no-repeat;
  opacity: 0.6;
}

.conten-wrapper{
  position: absolute;
  top:205px;
  left: 3%;
  width: 92%;
  background-color: white;
}

.conten-wrapper .content{
  margin: 0px 10px;
}

.conten-wrapper .address,.tag,.youji,.dateAndtime{
  display: flex;
  flex-direction: row;
  position: relative;
  height: 50px;
  width: 100%;
  border-bottom: 1px solid rgb(229,229,229);
  color: rgb(153,153,153);
  line-height: 50px;
  font-size: 16px;
  overflow: hidden;
}

.conten-wrapper .tag .tagText{
  overflow:hidden;
  width:230px;
}

.conten-wrapper .tag .tagText .tagItem{
  display: inline-block;
  height: 20px;
  margin: 15px 5px;
  padding:0px 5px;
  border: 1px solid #e5e5e5;
  border-radius: 5px;
  font-size: 12px;
  line-height: 20px;
}


.conten-wrapper image{
  width: 30px;
  height: 30px;
  margin-top: 10px;
  margin-right: 20px;
}

.conten-wrapper  .direction{
  position: absolute;
  top:10px;
  right: 0px;
  width: 30px;
  height: 30px;
}

.conten-wrapper .direction image{
  position: absolute;
  top:13px;
  right: 0px;
  width: 40%;
  margin-left: 30%;
  margin-top: -10px;
}

.viewOrNotView{
  width: 100%;
  height: 50px;
  border-bottom: 1px solid rgb(229,229,229);
  font-size: 16px;
}
.viewOrNotView .radio-group{
  display: flex;
  flex-direction: row;
  height: 50px;
  line-height: 50px;
}
.viewOrNotView .radio-group .radio{
  flex:1;
  text-align: center;
}

.youji input[type=text]
{
  height: 50px;
  width:100%;
  text-align: center;   
}

.dateAndtime .time{
  margin: 0 auto;
}

.addPhoto{
  display: flex;
  flex-direction: row;
  position: relative;
  height: 100px;
  width: 100%;
  color: rgb(153,153,153);
  line-height: 100px;
  font-size: 16px;
}

.addPhoto .add{
  text-align: center;
  margin: 0px auto;
}


.addPhoto .default{
  width: 30px;
  height: 30px;
  margin-top: 35px;
}

.addPhoto .uploadImages{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  overflow: hidden;
} 


.addPhoto .uploadImages .uploadImage image{
  width:60px;
  height: 60px;
  border-radius: 5px;
  margin-top: 16px;
}

.conten-wrapper .addPhoto .direction image{
  position: absolute;
  top:40px;
  right: 0px;
  width: 40%;
  margin-left: 30%;
  margin-top: -10px;
}

.submit{
  margin:400px auto 20px auto; 
}

.submit button{
  width: 325px;
  height: 30px;
  border: none;
  background-color: #f8c3cd;
  font-size: 18px;
  line-height: 30px;
}